<form action="{{ path('login_check') }}" method="post">
    <label for="username" class="LoginText">Email:</label>
    <input type="text" id="username" name="_username" value="{{ last_username }}" class="LoginInput" />

    <label for="password" class="LoginText">Contrase√±a:</label>
    <input type="password" id="password" name="_password" class="LoginInput" />

    {#
        If you want to control the URL the user is redirected to on success (more details below)
        <input type="hidden" name="_target_path" value="/account" />
    #}

    <input type="submit" name="login" class="ButtonLogin" value="Entrar" />
</form>
{% if error %}
    <div>{{ error.message }}</div>
{% endif %}