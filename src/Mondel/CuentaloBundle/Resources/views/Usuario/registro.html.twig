{% extends 'MondelCuentaloBundle::layout.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/mondelcuentalo/css/index.css') }}" />

{% endblock %}

{% block center %}

    <form action="{{ path('registro') }}" method="post" {{ form_enctype(form) }}>

        <div id="registroForm" class="Form">

            {% if app.session.hasFlash('error') %}
                <div class="flash-error">
                    {{ app.session.flash('error') }}
                </div>
            {% endif %}

            {{ form_errors(form) }}

            <table>
                <tr>
                    <td>{{ form_label(form.nombre) }}</td>
                    <td>{{ form_widget(form.nombre) }}</td>
                    <td>{{ form_errors(form.nombre) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.apellido) }}</td>
                    <td>{{ form_widget(form.apellido) }}</td>
                    <td>{{ form_errors(form.apellido) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.nick) }}</td>
                    <td>{{ form_widget(form.nick) }}</td>
                    <td>{{ form_errors(form.nick) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.email) }}</td>
                    <td>{{ form_widget(form.email) }}</td>
                    <td>{{ form_errors(form.email) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.email_alternativo) }}</td>
                    <td>{{ form_widget(form.email_alternativo) }}</td>
                    <td>{{ form_errors(form.email_alternativo) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.contrasenia.contrasenia, 'Contraseña') }}</td>
                    <td>{{ form_widget(form.contrasenia.contrasenia) }}</td>
                    <td>{{ form_errors(form.contrasenia) }}</td>
                </tr>
                <tr>
                    <td>{{ form_label(form.contrasenia.repetirContrasenia, 'Repetir contraseña') }}</td>
                    <td>{{ form_widget(form.contrasenia.repetirContrasenia) }}</td>
                    <td></td>
                </tr>
                <tr>
                    <td>{{ form_label(form.sexo) }}</td>
                    <td>{{ form_widget(form.sexo) }}</td>
                    <td>{{ form_errors(form.sexo) }}</td>
                </tr>
            </table>

            {{ form_rest(form) }}

            <input type="submit" value="Registrarme" onclick="validaRegistro()" />
        </div>
    </form>

{% endblock %}