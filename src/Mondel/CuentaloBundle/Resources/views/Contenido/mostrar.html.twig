<div class="Post" id="{{ contenido.id }}">
	<div class="Titulo">
		{% if contenido.usuario != null %}
			{% if contenido.usuario.sexo == 'm' %}
				<img class="IconoSexo" src="{{ asset('bundles/mondelcuentalo/img/masculino.png') }}" />
			{% else %}
				<img class="IconoSexo" src="{{ asset('bundles/mondelcuentalo/img/femenino.png') }}" />
			{% endif %}
		{% else %}
			{% if contenido.sexo != null %}
				{% if contenido.sexo == 'm' %}
					<img class="IconoSexo" src="{{ asset('bundles/mondelcuentalo/img/masculino.png') }}" />
				{% else %}
					<img class="IconoSexo" src="{{ asset('bundles/mondelcuentalo/img/femenino.png') }}" />
				{% endif %}
			{% endif %}
		{% endif %}
		{{ contenido.categoria.nombre }} - {{ contenido.fechaCreacion | created_ago }}
		<span class="InfoTitulo">
			{#
			{% if is_granted('ROLE_USER') %}
				{% if contenido.usuario and (contenido.usuario.id == app.security.token.user.id) %}
					X 
				{% endif %}
			{% endif %}
			#}
		</span>
	</div>
	<div class="Contenido">
		{{ contenido.texto }}		
	</div>
	<div class="Acciones">
		<div class="Compartir">
			<div class="Btn_fb">				
        		 <fb:like href="{{ url('_contenido_pagina_mostrar', { 'id': contenido.id }) }}" layout="button_count" show_faces="false" data-send="true" action="like" colorscheme="light"></fb:like>
			</div>
			<div>
				<t:sharer data-url="{{ url('_contenido_pagina_mostrar', { 'id': contenido.id }) }}" data-layout="medium_simple" data-lang="es"></t:sharer>
			</div>
			<div>
				<a href="https://twitter.com/share" class="twitter-share-button" data-url="{{ url('_contenido_pagina_mostrar', { 'id': contenido.id }) }}" data-text="¡Mira que mensaje tan increíble estuve leyendo!" data-count="none" data-size="medium" data-via="Cuentalouy" data-related="MondelUruguay" data-lang="es">Twittear</a>				
			</div>
			<div class="Btn_g">
				<g:plusone size="medium" annotation="none" href="{{ url('_contenido_pagina_mostrar', { 'id': contenido.id }) }}"></g:plusone>
			</div>	
		</div>
	</div>		
	<div class="Datos">
		<div class="TituloComentarios">Comentarios</div>
		<div class="Comentarios">
			{% set cantidadComentarios = contenido.comentarios | length %}
			{% if cantidadComentarios > 0 %}
				{% if cantidadComentarios > 3 %}
					<p class="PVerComentarios">
						<a class="VerComentarios" href="javascript:void(0);">Ver los {{ cantidadComentarios }} comentarios</a>
					</p>
				{% endif %}
				{% for comentario in contenido.comentarios %}
					{% set cssComentario = loop.index <= cantidadComentarios - 3 ? 'Comentario Hidden' : 'Comentario'  %}
					<div class="{{ cssComentario }}">
						<div class="ComentarioDatos">	
						<div id="usuario">							
							{% if comentario.usuario.sexo == 'm' %}
								<img class="IconoSexo" src="{{ asset('bundles/mondelcuentalo/img/masculino.png') }}" />
							{% else %}
								<img class="IconoSexo" src="{{ asset('bundles/mondelcuentalo/img/femenino.png') }}" />
							{% endif %}
							<b>{{ comentario.usuario.nick }}:</b></div> {{ comentario.texto }}
							<br />
							<div id="hora">{{ comentario.fechaCreacion | created_ago }}</div>
						</div>
						<div class="ComentarioAccion">
							<div class="EliminarItem">
								{% if is_granted('ROLE_USER') %}
									{% if comentario.usuario and (comentario.usuario.id == app.security.token.user.id) %}
										<a href="{{ path('_comentario_eliminar', { 'id': comentario.id }) }}" alt="Eliminar Comentario" onclick="return comentarioEliminar()">X</a>
									{% endif %}
								{% endif %}
							</div>
						</div>	
						{% if not loop.last or (loop.last and not is_granted('ROLE_USER'))  %}
							<hr />
						{% endif %}												
					</div>
				{%endfor%}
			{% else %}
				No hay comentarios aún.<br>
			{% endif %}
			{% if is_granted('ROLE_USER') %}				
				<form action="{{ path('_contenido_comentar', {'id': contenido.id}) }}" method="post" {{ form_enctype(formularios_comentarios[contenido.id]) }}>
					{{ form_errors(formularios_comentarios[contenido.id]) }}
				 	{{ form_widget(formularios_comentarios[contenido.id].texto, { 'attr': {'placeholder': 'escribe tu comentario y presiona enter...', 'class': 'InputComentarios'} }) }}
				 	{{ form_rest(formularios_comentarios[contenido.id]) }}
				</form>
			{% else %}
				Para poder comentar debes estar <a href="{{ path('_registrar') }}" alt="Registrarme">registrado</a> o <a href="{{ path('_ingresar') }}" alt="Ingresar">iniciar sesión</a>								
			{% endif %}
		</div>
	</div>
</div>
