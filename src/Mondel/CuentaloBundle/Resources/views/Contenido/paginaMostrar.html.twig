{% extends 'MondelCuentaloBundle::layout.html.twig' %}

{% block title %}{{ contenido.texto | cut_title | title }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@MondelCuentaloBundle/Resources/public/css/index.css' filter='yui_css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block content %}
	{{ parent() }}
	{% include 'MondelCuentaloBundle:Contenido:mostrar.html.twig' with {'mostrarComentariosTodos':'1'} %}
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	{% javascripts '@MondelCuentaloBundle/Resources/public/js/functions.js'
    			   '@MondelCuentaloBundle/Resources/public/js/contenido.js'
                   filter='yui_js'
		%}
	    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}