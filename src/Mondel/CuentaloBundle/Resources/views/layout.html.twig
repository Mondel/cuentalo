{# Layout para la portada de MondelCuentaloBundle #}

{% extends '::base.html.twig' %}

{% block stylesheets %}
    {% stylesheets
        '@MondelCuentaloBundle/Resources/public/css/reset.css'
        '@MondelCuentaloBundle/Resources/public/css/jquery-ui.css'
        '@MondelCuentaloBundle/Resources/public/css/layout.css'
        filter='yui_css'
    %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block body %}
    <header id="top">
        <div class="Wrap">
            <div id="logo">
                <a href="{{ path('_inicio') }}">
                    <img src="{{ asset('bundles/mondelcuentalo/img/logo_cuentalo.gif') }}">
                </a>
            </div>
            {% block menu_top %}
                <div id="menu_top">
                    <div id="content_menu_top">
                        {% if is_granted('ROLE_USER') %}
                            <div id="nick_user">
                                Bienvenido {{ app.security.token.user.nombre ? app.security.token.user.nombre : app.security.token.user.nick }} (<a href="{{ path('_salir') }}" title="Salir">Salir</a>)
                            </div>
                        {% else %}
                            {% include 'MondelCuentaloBundle:Usuario:ingresoInicio.html.twig' %}
                        {% endif %}
                    </div>
                </div>
            {% endblock %}
        </div>
    </header>
    <section id="content">
        <nav id="left">
            <ul id="menu">
                <li><a href="{{ path('_inicio') }}">Inicio</a></li>
                {% if not is_granted('ROLE_USER') %}
                    <li><a href="{{ path('_registrar') }}">Registrarme</a></li>
                {#}
                {% else %}
                    <li><a href="{{ path('_salir') }}">Salir</a></li>
                    #}
                {% endif %}
                <li><a target="_blank" href="http://www.mondel.com.uy/contacto.php">Cont&aacute;ctanos</a></li>
            </ul>
        </nav>
        <section id="center">
            {% block content %}
                <div class="Wrap">
                    <div id="message">
                        {% if app.session.hasFlash('notice') %}
                            <div class="Notice">
                                {{ app.session.flash('notice') }}
                            </div>
                        {% elseif app.session.hasFlash('error') %}
                            <div class="Error">
                                {{ app.session.flash('error') }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endblock %}
        </section>
        <aside id="right">
            <div id="adsense">
                <script type="text/javascript"><!--
                google_ad_client = "ca-pub-5516174379180074";
                /* Cuentalo derecho anterior */
                google_ad_slot = "3964750434";
                google_ad_width = 160;
                google_ad_height = 600;
                //-->
                </script>
                <script type="text/javascript"
                src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
                </script>
            </div>
            <div id="pub_mondel">
                <a target="_blank" href="http://www.mondel.com.uy">
                    <img src="{{ asset('bundles/mondelcuentalo/img/publicidad.gif') }}" alt="Mondel" />
                </a>
            </div>
        </aside>
    </section>
    <footer id="footer">
        <script type="text/javascript"><!--
        google_ad_client = "ca-pub-5516174379180074";
        /* footer anterior */
        google_ad_slot = "6975745722";
        google_ad_width = 468;
        google_ad_height = 60;
        //-->
        </script>
        <script type="text/javascript"
        src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
        </script>
    </footer>
{% endblock %}
{% block javascripts %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.16/jquery-ui.min.js"></script>
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-26941179-2']);
        _gaq.push(['_trackPageview']);

        (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>
{% endblock %}