{# Layout para la portada de MondelCuentaloBundle #}

{% extends '::base.html.twig' %}

{% block stylesheets %}

    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/mondelcuentalo/css/reset.css') }}" />
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/mondelcuentalo/css/layout.css') }}" />
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/mondelcuentalo/css/jquery-ui.css') }}" />

{% endblock %}

{% block body %}

    <header id="top">
        <div class="Wrap">
            <div id="logo">
                <a href="{{ path('inicio') }}">
                    <img src="{{ asset('bundles/mondelcuentalo/img/logo_cuentalo.gif') }}">
                </a>
            </div>
            <div id="menu_top">
                <div id="content_menu_top">
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        Bienvenido {{ app.security.getToken().getUser().nick }}
                    {% endif %}
                </div>
            </div>
        </div>
    </header>

    <section id="content">
        <nav id="left">
            <ul id="menu">
                <li><a href="{{ path('inicio') }}">Todos</a></li>
                {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <li><a href="{{ path('registro') }}">Registrarse</a></li>
                {% else %}
                    <li><a href="{{ path('logout') }}">Salir</a></li>
                {% endif %}
                <li><a target="_blank" href="http://www.mondel.com.uy/contacto.php">Cont&aacute;ctanos</a></li>
            </ul>
        </nav>

        <section id="center">
            {% block content %}
                <div class="Wrap">
                    <div id="message">
                        {% if app.session.hasFlash('notice') %}
                            <div class="Noticia">
                                {{ app.session.flash('notice') }}
                            </div>
                        {% elseif app.session.hasFlash('error') %}
                            <div class="Error">
                                {{ app.session.flash('error') }}
                            </div>
                        {% endif %}
                    </div>
                </div>
            {% endblock %}
        </section>

        <aside id="right">
            <div id="adsense">
                <script type="text/javascript"><!--
                google_ad_client = "ca-pub-4717880844454319";
                /* Adsense1 */
                google_ad_slot = "4216094893";
                google_ad_width = 160;
                google_ad_height = 600;
                //-->
                </script>
                <script type="text/javascript" src="http://pagead2.googlesyndication.com/pagead/show_ads.js"></script>
            </div>
            <div id="pub_mondel">
                <a target="_blank" href="http://www.mondel.com.uy">
                    <img src="{{ asset('bundles/mondelcuentalo/img/publicidad.gif') }}" alt="Mondel" />
                </a>
            </div>
        </aside>
    </section>

    <footer id="footer">
        <script type="text/javascript"><!--
        google_ad_client = "ca-pub-4717880844454319";
        /* Footer nuevo */
        google_ad_slot = "1416085040";
        google_ad_width = 728;
        google_ad_height = 90;
        //-->
        </script>
        <script type="text/javascript" src="http://pagead2.googlesyndication.com/pagead/show_ads.js"></script>
    </footer>

{% endblock %}

{% block javascripts %}

    <script type="text/javascript" src="{{ asset('bundles/mondelcuentalo/js/jquery.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/mondelcuentalo/js/jquery-ui.min.js') }}"></script>
    <script type="text/javascript">
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-26661824-1']);
        _gaq.push(['_trackPageview']);

        (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();
    </script>

{% endblock %}