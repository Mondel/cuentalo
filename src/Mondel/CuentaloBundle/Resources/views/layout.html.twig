{# Layout para la portada de MondelCuentaloBundle #}

{% extends '::base.html.twig' %}

{% block stylesheets %}

    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/mondelcuentalo/css/reset.css') }}" />
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/mondelcuentalo/css/layout.css') }}" />
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/mondelcuentalo/css/jquery-ui.css') }}" />

{% endblock %}

{% block body %}

    <div id="top">
        <div class="Wrap">

            <div id="content_top">

                <div id="logo">
                    <a href="{{ path('homepage') }}">
                        <img src="{{ asset('bundles/mondelcuentalo/img/logo_cuentalo.gif') }}">
                    </a>
                </div>

                <div id="menu_top">
                    <div id="content_menu_top">
                        {% if customError %}
                            <div id="LoginError">{{ customError }}</div>
                        {% endif %}
                        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                            Bienvenido {{usuario.nombre}}
                        {% endif %}
                    </div>
                </div>

            </div>

        </div>
        {% block top %}{% endblock %}
    </div>

    <div id="content">

        <div id="left">
            <ul id="menu">
                <li><a href="{{ path('homepage') }}">Todos</a></li>
                <li><a href="{{ path('vista_secretos') }}">Secretos</a></li>
                <li><a href="{{ path('vista_anecdotas') }}">Anecdotas</a></li>
                <li><a href="{{ path('vista_mensajes') }}">Mensajes</a></li>
                {% if not is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <li><a href="#" onclick="registro()">Registrarse</a></li>
                {% else %}
                    <li><a href="{{ path('logout') }}">Salir</a></li>
                {% endif %}
                <li><a target="_blank" href="http://www.mondel.com.uy/contacto.php">Contactanos</a></li>
            </ul>

            {% block left %}


            {% endblock %}

            <div id="addthis">
                <div class="addthis_toolbox addthis_default_style ">
                    <a class="addthis_button_preferred_1"></a>
                    <a class="addthis_button_preferred_2"></a>
                    <a class="addthis_button_preferred_3"></a>
                    <a class="addthis_button_compact"></a>
                    <a class="addthis_counter addthis_bubble_style"></a>
                </div>
                <script type="text/javascript" src="http://s7.addthis.com/js/250/addthis_widget.js#pubid=fabid"></script>
            </div>
        </div>

        <div id="center">
            {% block center %}{% endblock %}
        </div>

        <div id="right">
            {% block right %}{% endblock %}
        </div>

    </div>

    <div id="FooterAds">
        <script type="text/javascript"><!--
        google_ad_client = "ca-pub-4717880844454319";
        /* Footer nuevo */
        google_ad_slot = "1416085040";
        google_ad_width = 728;
        google_ad_height = 90;
        //-->
        </script>
        <script type="text/javascript"
        src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
        </script>
    </div>

{% endblock %}